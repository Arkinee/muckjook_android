<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="main"
            type="com.muckjook.android.view.main.MainActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_constraint_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/main_tv_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tv_top"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/main_iv_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/main_iv_search_desc"
                android:padding="10dp"
                android:src="@drawable/ic_search"
                android:onClick="@{()->main.searchClick()}"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/main_view_border_bottom"
            app:layout_constraintTop_toBottomOf="@+id/main_constraint_top" />

        <View
            android:id="@+id/main_view_border_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/src_gradient_main"
            app:layout_constraintBottom_toTopOf="@+id/main_constraint_bottom" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_constraint_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="7">

            <ImageView
                android:id="@+id/main_iv_menu_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/main_iv_desc"
                android:onClick="@{()->main.homeClick()}"
                android:padding="10dp"
                android:src="@drawable/ic_home"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@+id/main_iv_menu_mypage"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/main_iv_menu_mypage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/mypage_iv_desc"
                android:onClick="@{()->main.mypageClick()}"
                android:padding="10dp"
                android:src="@drawable/ic_mypage_normal"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/main_iv_menu_home" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>